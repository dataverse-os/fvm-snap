{
  "name": "snap",
  "version": "0.1.0",
  "description": "The 'Hello, world!' of MetaMask Snaps, now written in TypeScript.",
  "repository": {
    "type": "git",
    "url": "https://github.com/MetaMask/template-snap-monorepo.git"
  },
  "license": "(MIT-0 OR Apache-2.0)",
  "main": "./dist/bundle.js",
  "files": [
    "dist/",
    "images/",
    "snap.manifest.json"
  ],
  "scripts": {
    "build": "mm-snap build",
    "build:clean": "npm clean && npm build",
    "clean": "rimraf dist",
    "lint": "npm lint:eslint && npm lint:misc --check",
    "lint:eslint": "eslint . --cache --ext js,ts",
    "lint:fix": "npm lint:eslint --fix && npm lint:misc --write",
    "lint:misc": "prettier '**/*.json' '**/*.md' '!CHANGELOG.md' --ignore-path .gitignore",
    "serve": "mm-snap serve",
    "start": "mm-snap watch",
    "test": "jest"
  },
  "dependencies": {
    "@metamask/snaps-types": "^2.0.0",
    "@metamask/snaps-ui": "^2.0.0",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@lavamoat/allow-scripts": "^2.0.3",
    "@metamask/auto-changelog": "^2.6.0",
    "@metamask/snaps-cli": "^2.0.1",
    "@metamask/snaps-jest": "^1.0.0",
    "jest": "^29.5.0",
    "rimraf": "^3.0.2",
    "through2": "^4.0.2",
    "ts-jest": "^29.1.0",
    "typescript": "^4.7.4"
  },
  "packageManager": "npm@3.2.1",
  "engines": {
    "node": ">=18.6.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
